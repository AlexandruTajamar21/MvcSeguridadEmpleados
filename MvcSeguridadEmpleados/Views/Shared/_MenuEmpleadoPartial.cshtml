@if (Context.User.Identity.IsAuthenticated == false)
{
    <li class="nav-item">
        <a class="nav-link"
           asp-controller="Empleados"
           asp-action="PerfilEmpleado">
            LogIn
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link"
           asp-controller="Manage"
           asp-action="LogOut">
            LogOut
            <span style="color:blue">
                @Context.User.Identity.Name
            </span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Empleados" asp-action="Compis">Compis</a>
    </li>
}